@page
@model BioBooker.AuthApp.Uil.Pages.Account.Register.IndexModel

<div>
    <parial name="_ValidationSummary" />
    <div class="row">
        <div class="col-sm-12 col-lg-6 offset-lg-3">
            <div class="card">
                <div class="card-header">
                    <h2>Register</h2>
                </div>
                <div class="card-body">
                    <form asp-route="Register">
                        <input type="hidden" asp-for="Input.ReturnUrl" />
                        <input type="hidden" asp-for="Input.RoleName" value="Standard" />
                        <input type="hidden" asp-for="Input.Name" value=Email />
                        <input type="hidden" asp-for="Input.ConfirmPassword" value=Password />
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input class="form-control" placeholder="Email" asp-for="Input.Email" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input class="form-control" placeholder="Password" asp-for="Input.Password" />
                        </div>
                        <button class="btn btn-primary" name="button" value="register">Register</button>
                    </form>
                </div>
                <div class="card-footer">
                    <a asp-page="../Login/Index" asp-route-returnUrl="@Model.Input.ReturnUrl">Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
