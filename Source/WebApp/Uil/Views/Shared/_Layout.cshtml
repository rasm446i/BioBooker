<!DOCTYPE html>
<html lang="en-US">
<head>
    <!-- Meta Info -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Page Title -->
    <title>BioBooker - @ViewBag.Title</title>
    <!-- Ref Style -->
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <header id="nav-header">
    <!-- Top Nav Area -->
    <nav>
        <ul>
            <li><img src="bb-logo.svg" scale="1.5" /></li>
            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-controller="Home" asp-action="Index">Movies</a></li>
            <li><a asp-controller="Home" asp-action="Index">Movie Showings</a></li>
            <li><a asp-controller="Home" asp-action="Index">Movie Theaters</a></li>
            <li class="right-li"><a asp-controller="Home" asp-action="Index">My BioBooker</a></li>
            <li class="right-li"><a asp-controller="Home" asp-action="Index">Hi Username!</a></li>
        </ul>
    <hr>
    </nav>
    </header>
    <main>
    <div>
        <h1>@ViewBag.Title</h1>
        <!-- Render View -->
        @RenderBody()
    </div>
    </main>
    <footer>
        <hr>
        <div class="footer-left">
        Copyright &copy; 2023 BioBooker
        </div>
        <div class="footer-right">
            <a asp-controller="Home" asp-action="Index">Contact</a>
            <a asp-controller="Home" asp-action="Index">About</a>
            <a asp-controller="Home" asp-action="Index">Privacy</a>
        </div>
    </footer>
</body>
</html>
